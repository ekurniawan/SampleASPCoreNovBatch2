@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home View</title>
</head>
<body>
    <h2>Hitung Luas</h2>
    <form action="/Home/LuasSegitiga" method="GET">
        <label>Alas :</label><br/>
        <input type="text" name="alas" /><br/><br/>
        <label>Tinggi: </label><br/>
        <input type="text" name="tinggi" /><br/><br/>
        <input type="submit" name="submit" value="Hitung" />
    </form>
    <hr />
    @if(ViewData["hasil"]!=null){
        <h2>Hasil Luas Segitiga</h2>
        <p>Hasil Luas Segitiga: @ViewData["hasil"]</p>
        <p>Username @ViewBag.Username</p>
    }
</body>
</html>
